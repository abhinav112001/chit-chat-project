<style>
    .header-btn{
        display: inline;
        border-radius: 3px;
        border: 2px solid black;
        background-color: rgb(204, 204, 204);
        margin: 2px 2px;
    }
    li a,h2{
        padding: 1px 2px;
        text-decoration: none; 
        color: rgb(0, 0, 0);
        font-weight: bold;
    }
</style>
<header>
    <ul>
        <% if (locals.user){ %>
            <li class="header-btn">
                <a href="/users/sign-out">Sign Out</a>
            </li>
            <li class="header-btn">
                <h2><%= user.name %></h2>
            </li>
        <% } else{ %>
            <li class="header-btn">
                <a href="/users/sign-in">Sign in</a>
            </li>
            <li class="header-btn">
                <a href="/users/sign-up">Sign up</a>
            </li>
        <%}%>
    </ul>
</header>